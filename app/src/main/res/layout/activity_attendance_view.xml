<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/markattendance"
    tools:context="com.prathmeshranaut.attendancemsit.activities.AttendanceView">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/attendance_view"
        style="@style/cardstyle"
        android:padding="40dp"
        android:clickable="true"
        card_view:cardCornerRadius="10dp"
        >
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:padding="10dp">
     <TextView
         android:id="@+id/student_name"
         style="@style/textstyle"
         tools:text="Alex"/>

         <TextView
             android:id="@+id/student_sno"
             style="@style/textstyle"
             android:layout_to="@id/student_name"
             android:layout_marginBottom="20dp"
             tools:text="S.No. 20"
             />
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/thumsup_view"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="80dp"
           />
             <ImageView
                 android:id="@+id/thumsdown_view"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toRightOf="@id/thumsup_view"
                 android:layout_marginLeft="60dp"
                 />
         </RelativeLayout>


     </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
